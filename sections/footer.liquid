{% form 'contact' %}
  {% if form.posted_successfully? %}
    <div class="alert alert--success" role="alert">
      {% if form.success_message %}
        {{ form.success_message }}
      {% else %}
        Thank you for contacting us. We'll get back to you as soon as possible.
      {% endif %}
    </div>
  {% endif %}

  <div class="row">
    <div class="col-md-4">
      <label for="ContactFormName" class="form-group">
        <input type="text" id="ContactFormName" name="contact[name]" class="form-control fields" value="{{ form.name }}" placeholder="Name">
      </label>
    </div>

    <div class="col-md-4">
      <label for="ContactFormEmail" class="form-group">
        <input type="email" id="ContactFormEmail" name="contact[email]" class="form-control fields" value="{{ form.email }}" placeholder="Email">
      </label>
    </div>

    <div class="col-md-4">
      <label for="ContactFormPhone" class="form-group">
        <input type="tel" id="ContactFormPhone" name="contact[phone]" class="form-control fields" value="{{ form.phone }}" placeholder="Phone">
      </label>
    </div>

    <div class="col-md-12">
      <label for="ContactFormMessage" class="form-group">
        <textarea id="ContactFormMessage" name="contact[body]" class="form-control field-textarea" rows="5" placeholder="Message">{{ form.body }}</textarea>
      </label>
    </div>
  </div>

  <div class="text-center">
    <button type="submit" class="form-btn">Submit</button>
  </div>
{% endform %}

